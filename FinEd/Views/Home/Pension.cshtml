@{
    ViewData["Title"] = "Pensions";
}

<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <h1>Pensions Overview</h1>
        <a asp-controller="Home" asp-action="PensionSection1" class="btn btn-primary">Section 1</a>
        <a asp-controller="Home" asp-action="PensionSection2" class="btn btn-primary">Section 2</a>
        <a asp-controller="Home" asp-action="PensionSection3" class="btn btn-primary">Section 3</a>
    </div>
    </body>


    <style>
        .container {
            margin: 20px auto;
            max-width: 800px;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #2C3E50;
            font-size: 36px;
            margin-bottom: 20px;
        }

        .btn {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 16px;
            text-align: center;
            display: inline-block;
            margin-right: 10px;
            text-decoration: none;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #2C3E50;
            color: white;
            border: none;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #1a2533;
            }
    </style>
   
    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
        ViewBag.Title = "Pension Quiz";
    }

   